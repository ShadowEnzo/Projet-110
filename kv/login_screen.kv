<LoginScreen>:
    name: "login"
    BoxLayout:
        orientation: "vertical"
        padding: 50
        spacing: 20

        Label:
            text: "Connexion à l'épicerie"
            font_size: 24
            size_hint_y: None
            height: 50

        TextInput:
            id: email_input
            hint_text: "Email"
            multiline: False
            size_hint_y: None
            height: 40

        TextInput:
            id: mdp_input
            hint_text: "Mot de passe"
            multiline: False
            password: True
            size_hint_y: None
            height: 40

        Button:
            text: "Se connecter"
            size_hint_y: None
            height: 45
            on_release: root.se_connecter()

        Button:
            text: "Créer un compte"
            size_hint_y: None
            height: 40
            background_color: (0.2,0.6,0.86,1)
            on_release:
                root.manager.current = "register"
