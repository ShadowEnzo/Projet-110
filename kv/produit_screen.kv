<ProduitScreen>:
    canvas.before:
        Color:
            rgba: 0.93, 0.96, 1, 1  # Bleu très clair pour les produits
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 15

        Label:
            text: "Gestion des Produits"
            font_size: 30
            bold: True
            color: 0.1, 0.4, 0.7, 1
            size_hint_y: None
            height: 50

        BoxLayout:
            size_hint_y: None
            height: 50
            spacing: 10
            TextInput:
                id: search_input
                hint_text: "Rechercher un produit..."
                multiline: False
                on_text: root.filtrer_produits(self.text)
            Button:
                text: "Ajouter un produit"
                size_hint_x: 0.3
                background_color: 0.1, 0.5, 0.8, 1
                color: 1,1,1,1
                font_size: 16
                bold: True
                on_release: root.ouvrir_popup_ajout()
            Button:
                text: "Importer produits exemple"
                size_hint_x: 0.3
                background_color: 0.2, 0.7, 0.2, 1
                color: 1,1,1,1
                font_size: 16
                bold: True
                on_release: root.importer_produits_exemple()

        Label:
            text: root.message
            size_hint_y: None
            height: 30
            color: (1, 0, 0, 1)
            font_size: 16

        ScrollView:
            GridLayout:
                id: produit_list
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: 40
                row_force_default: True

        Button:
            text: "Retour à l'accueil"
            size_hint_y: None
            height: 45
            background_color: 0.8, 0.1, 0.1, 1
            color: 1, 1, 1, 1
            font_size: 18
            bold: True
            on_release: root.manager.current = "home"
