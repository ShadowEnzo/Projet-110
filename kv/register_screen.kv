<RegisterScreen>:
    name: "register"
    canvas.before:
        Color:
            rgba: 1, 0.97, 0.97, 1  # Rose très pâle pour l'écran d'inscription
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        padding: 40
        spacing: 15

        Label:
            text: "Créer un nouvel utilisateur"
            font_size: 24
            size_hint_y: None
            height: 50

        TextInput:
            id: nom_input
            hint_text: "Nom"
            multiline: False

        TextInput:
            id: email_input
            hint_text: "Email"
            multiline: False

        TextInput:
            id: mdp_input
            hint_text: "Mot de passe"
            password: True
            multiline: False

        TextInput:
            id: role_input
            hint_text: "Rôle (admin ou vendeur)"
            multiline: False

        Button:
            text: "Créer utilisateur"
            size_hint_y: None
            height: 45
            on_release: root.enregistrer_utilisateur()
